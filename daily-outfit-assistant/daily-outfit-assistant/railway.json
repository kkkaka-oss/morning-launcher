{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["daily-outfit-assistant/daily-outfit-assistant/**"]
  },
  "deploy": {
    "startCommand": "cd daily-outfit-assistant/daily-outfit-assistant/scripts && gunicorn webhook_server:app --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  }
}
